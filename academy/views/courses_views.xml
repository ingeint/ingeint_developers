<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="courses_form_view" model="ir.ui.view">
            <field name="name">academy.courses.form</field>
            <field name="model">academy.courses</field>
            <field name="arch" type="xml">
                <form string="Academy Courses">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Example Names"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="academy_id"/>
                            </group>
                            <group>
                                <field name="academy_many"/>
                                <field name="academy_one"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="courses_tree_view" model="ir.ui.view">
            <field name="name">academy.courses.tree</field>
            <field name="model">academy.courses</field>
            <field name="arch" type="xml">
                <tree string="Academy Courses">
                    <field name="name"/>
                    <field name="academy_id"/>
                </tree>
            </field>
        </record>

        <record id="courses_search_view" model="ir.ui.view">
            <field name="name">academy.courses.search</field>
            <field name="model">academy.courses</field>
            <field name="arch" type="xml">
                <search string="Academy Courses Search">
                    <group expand="1" string="Group By">
                        <filter string="Example Name" name="name" domain="[]"
                                context="{'group_by':'name'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="academy_courses_act_window" model="ir.actions.act_window">
            <field name="name">academy_courses</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">academy.courses</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Courses.
                </p>
            </field>
        </record>

        <menuitem name="Academy Courses" id="courses_menu" parent="academy.menu_1" action="academy_courses_act_window"/>

    </data>
</odoo>